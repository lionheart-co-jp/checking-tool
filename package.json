{
    "name": "checktool-electron-vite",
    "version": "2.3.1",
    "main": "./dist/main.js",
    "scripts": {
        "dev": "vite",
        "build": "npm run build:vite && npm run build:tsc",
        "build:vite": "vite build && ncp ./.vite ./dist",
        "build:tsc": "tsc",
        "pack": "electron-builder",
        "pack:mac": "electron-builder --mac --x64",
        "pack:win": "electron-builder --win --x64",
        "electron": "electron ./dist/main.js"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.30",
        "@fortawesome/free-brands-svg-icons": "^5.14.0",
        "@fortawesome/free-regular-svg-icons": "^5.14.0",
        "@fortawesome/free-solid-svg-icons": "^5.14.0",
        "@fortawesome/vue-fontawesome": "^3.0.0-1",
        "encoding": "^0.1.13",
        "jsdom": "^16.4.0",
        "node-fetch": "^2.6.1",
        "tslib": "^2.0.1",
        "vue": "^3.0.0",
        "vue-i18n": "^9.0.0-beta.1",
        "vue-router": "^4.0.0-beta.11"
    },
    "devDependencies": {
        "@types/jsdom": "^16.2.4",
        "@types/node": "^14.11.1",
        "@types/node-fetch": "^2.5.7",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "@typescript-eslint/typescript-estree": "^4.1.1",
        "@vue/compiler-sfc": "^3.0.0",
        "@vue/eslint-config-prettier": "^6.0.0",
        "@vue/eslint-config-typescript": "^5.1.0",
        "bulma": "^0.9.0",
        "electron": "^10.1.2",
        "electron-builder": "^22.8.1",
        "electron-reload": "^1.5.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-vue": "^6.2.2",
        "ncp": "^2.0.0",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.0.3",
        "vite": "^1.0.0-rc.4"
    },
    "build": {
        "productName": "checktool",
        "appId": "jp.co.lionheart.checktool",
        "directories": {
            "output": "build"
        },
        "files": [
            "dist/**/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": "zip"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": "portable"
        },
        "linux": {
            "icon": "build/icons"
        }
    }
}
